<% layout('/layouts/boilerplate') %>
<title>Restaurant List</title>
<div id="cluster-map"></div>
<h1>All Restaurants</h1>
<div>
  <a class="btn btn-primary" href="/restaurants/new">Add Restaurant</a>
</div>

<% for(let restaurant of restaurants){ %>
<div class="card mb-3">
  <div class="row">
    <!-- each card has 12 rows, divide them into 4 and 8 -->
    <div class="col-md-4">
      <% if(restaurant.images.length){ %>
      <img class="img-fluid" alt="" src="<%=restaurant.images[0].index%>" />
      <% }else{ %>
      <img
        class="img-fluid"
        alt=""
        src="https://res.cloudinary.com/dcc4gmbgx/image/upload/w_250/v1657101876/YelpCamp/nji7wn4ljc9gxxgwvsnu.jpg"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.title %></h5>
        <p class="card-text"><%= restaurant.description %></p>
        <p class="card-text">
          <small class="text-muted"> <%= restaurant.location%> </small>
        </p>
        <a class="btn btn-primary" href="/restaurants/<%=restaurant._id%>"
          >View <%=restaurant.title%>
        </a>
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
  const restaurants = { features: <%- JSON.stringify(restaurants) %>}
</script>

<script src="javascripts/clusterMap.js"></script>
